<p style="color: green"><%= notice %></p>

<h1>Stores</h1>

<div id="stores">
  <% @stores.each do |store| %>
    <%= render store %>
    <p>
      <%= link_to "Show this store", store %>
      <%= button_to "Select this store", select_store_path(store), method: :post %>
    </p>
  <% end %>
</div>

<%= link_to "New store", new_store_path %>
